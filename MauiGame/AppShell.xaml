<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiGame"
    Shell.FlyoutBehavior="Flyout"
    xmlns:pages="clr-namespace:MauiGame.Pages"
    Title="MauiGame">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Pages.MainPage}"
        Route="MainPage" />

    <FlyoutItem >
        <ShellContent x:Name="testPage" ContentTemplate="{DataTemplate pages:TestPage}" Route="TestPage" />
    </FlyoutItem>

</Shell>
